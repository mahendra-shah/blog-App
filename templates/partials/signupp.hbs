<section class="intro">
    <div class="modal fade" id="pop-login" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
        aria-hidden="true">
        <div class="modal-dialog cascading-modal modal-avatar modal-sm" role="document">
            <div class="modal-content">

                <div class="modal-header">
                    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRsIUuXBTnhTm24HWLK9rHvJ5dkZMElOSUFag&usqp=CAU"
                        alt="avatar" class="rounded-circle img-responsive">
                </div>
                <div class="modal-body text-center mb-1">
                    <h5 class="mt-1 mb-2">Welcome</h5>
                    <hr>
                    <form action="" method="POST">
                        <div class="form-floating mb-2">
                            <label class="visually-hidden" for="inlineFormInputGroupUsername">Name</label>
                            <div class="input-group">
                                <div class="input-group-text">Aa</div>
                                <input type="text" class="form-control" id="inlineFormInputGroupUsername"
                                    placeholder="enter name" required>
                            </div>
                        </div>
                        <div class="form-floating mb-2">
                            <label class="visually-hidden" for="inlineFormInputGroupUsername">Email</label>
                            <div class="input-group">
                                <div class="input-group-text">@</div>
                                <input type="text" class="form-control" id="inlineFormInputGroupUsername"
                                    placeholder="email" required>
                            </div>
                        </div>
                        <div class="form-floating mb-2">
                            <label class="visually-hidden" for="inlineFormInputGroupUsername">Password</label>
                            <div class="input-group">
                                <div class="input-group-text">#</div>
                                <input type="password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
                                    class="form-control" id="inlineFormInputGroupUsername" placeholder="Password"
                                    required>
                            </div>
                        </div>

                        <div class="text-center mt-3">
                            <input type="submit" class="btn btn-light" id="inlineFormInputGroupUsername">

                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</section>